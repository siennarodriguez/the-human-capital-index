{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Human Capital Index 2020",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Income_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "High income",
          "Upper middle income",
          "Lower middle income",
          "Low income"
        ],
        "labels": [
          "Show All",
          "High Income",
          "Upper Middle Income",
          "Lower Middle Income",
          "Low Income"
        ],
        "name": "Select Income: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Select Continent: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/siennarodriguez/the-human-capital-index/main/js/world.json",
        "format": { "type": "topojson", "feature": "world.geo" }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/siennarodriguez/the-human-capital-index/main/data/hci_data_september_2020.csv"
      },
      "transform": [
        {
          "lookup": "Country Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/siennarodriguez/the-human-capital-index/main/js/world.json",
              "format": {
                "type": "topojson",
                "feature": "world.geo"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "filter": "Income_selection == null || datum.Income == Income_selection"
        },
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "HUMAN CAPITAL INDEX 2020",
          "type": "quantitative",
          "scale": { "type": "quantile" }
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "HUMAN CAPITAL INDEX 2020",
            "type": "quantitative",
            "title": "Human Capital Index 2020",
            "format": ","
          },
          { "field": "Income", "type": "nominal" },
          { "field": "Continent", "type": "nominal" }
        ]
      }
    }
  ],
  "config": {}
}
